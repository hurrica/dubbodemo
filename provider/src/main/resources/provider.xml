<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!--  具体实现bean  -->
    <bean id="demoService" class="com.ping.chen.dubbo.provider.service.impl.DemoServiceImpl"/>

    <!--  提供方应用信息，用于计算依赖-->
    <dubbo:application name="demo-provider"/>

    <!--  注册中心  -->
    <dubbo:registry address="zookeeper://192.168.40.137:2181"/>

    <!--  dubbo协议服务暴露地址  -->
    <dubbo:protocol name="dubbo" port="20880"/>

    <!--  暴露服务接口，retries=0避免重复调用 -->
    <dubbo:service retries="0" interface="com.ping.chen.dubbo.service.DemoService" ref="demoService" timeout="50000"/>

</beans>